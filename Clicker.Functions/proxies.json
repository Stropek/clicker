{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        "JoinGame": {
            "matchCondition": {
                "route": "/joingame",
                "methods": [ "POST" ]
            },
            "responseOverrides": {
                "response.body": {
                    "id": 1
                }
            }
        },
        "GetGame": {
            "matchCondition": {
                "route": "/getgame",
                "methods": [ "GET" ]
            },
            "responseOverrides": {
                "response.body": {
                    "id": 1,
                    "players": [
                        "Adam",
                        "Bob",
                        "Clint"
                    ]
                }
            }
        }
    }
}