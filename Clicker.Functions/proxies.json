{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        "Join": {
            "matchCondition": {
                "route": "/join",
                "methods": [ "POST", "OPTIONS" ]
            },
            "backendUri": "https://%WEBSITE_HOSTNAME%/api/JoinGame"
        },
        "Ready": {
            "matchCondition": {
                "route": "/ready",
                "methods": [ "POST", "OPTIONS" ]
            },
            "responseOverrides": {
                "response.body": {
                    "ready": false,
                    "reason": "waiting for more players..."
                }
            }
        },
        "Game": {
            "matchCondition": {
                "route": "/game",
                "methods": [ "GET", "OPTIONS" ]
            },
            "backendUri": "https://%WEBSITE_HOSTNAME%/api/GetGame"
        }
    }
}