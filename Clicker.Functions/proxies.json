{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        "Join": {
            "matchCondition": {
                "route": "/join",
                "methods": [ "POST" ]
            },
            "responseOverrides": {
                "response.body": {
                    "id": "12345678-1234-1234-1234-123456789012",
                    "name": "Adam",
                    "clicks": 0
                }
            }
        },
        "GetGame": {
            "matchCondition": {
                "route": "/getgame",
                "methods": [ "GET" ]
            },
            "responseOverrides": {
                "response.body": {
                    "id": 1,
                    "players": [
                        "Adam",
                        "Bob",
                        "Clint"
                    ]
                }
            }
        }
    }
}